{% extends 'base.html.twig' %}

{% block title %}Liste des Biens!{% endblock %}

{% block body %}

<div class = "jumbotron">
     {% for article in articles%}
               <article>
                    <h2>{{ article.title}}</h2>
                    <div class = "metadata"> Ecrit le : {{ article.createdAt | date('d/m/Y') }} // Categorie:  {{ article.categorie.titre }}</div>

                    <div class = "content">
                         <img src="https://via.placeholder.com/300x200" alt="">
                          {{ article.content }}
                         <a href="{{path('blog_show', {'id': article.id})}}" class="btn btn-primary"> Lire la suite </a>      
                         <p> </p>
                    </div>          
               </article>      
     {% endfor %}         
               <div class="pagination">
                     {{ knp_pagination_render(articles) }}
               </div>
{% endblock %}